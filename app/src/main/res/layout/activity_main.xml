<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="2">
   </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:background="@drawable/sfsdfdfdfd"
        android:layout_weight="2.5"
        android:layout_marginBottom="20dp"
        android:layout_height="0dp">

    </ImageView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

    </RelativeLayout>
        <EditText
            android:layout_weight="0.8"
            android:paddingLeft="25dp"
            android:drawableLeft="@drawable/icon_edit"
            android:layout_width="match_parent"
            android:hint="Masukan NISN"
            android:id="@+id/txtnisn"
            android:inputType="number"
            android:drawablePadding="20dp"
            android:layout_height="0dp"
            android:background="@drawable/rounded_edttxt"
            />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

    </RelativeLayout>
<Button
    android:layout_width="match_parent"
    android:text="Lihat Tabungan"
    android:textColor="#fff"
    android:layout_weight="0.9"
    android:id="@+id/btnlihat"
    android:layout_marginTop="20dp"
    android:background="@drawable/roundedbtn"
    android:layout_height="0dp">

</Button>



</LinearLayout>